pipeline {
    agent {
        label 'master'
    }

    stages {
        stage('clone codebase') {
            steps {
                echo 'clone codebase from github'
                git (url : 'https://github.com/rkotri/maven-project.git',branch : 'master',credentialsId:'cred4git')
            }
        }
    
     
        stage('compile et test') {
            steps {
                echo 'compiling & testing '
                withMaven(maven : 'localmaven') {  
                    sh 'mvn clean test'
                    }
                
                
            }
        }  
        stage('built') {
            steps {
                echo 'building projet '
                withMaven(maven : 'localmaven') {  
                    sh 'mvn -B -DskipTests clean package'
                    }
                
            }
        } 
        stage('sonarqube analysis') {
            steps {
                echo 'qualimetrty analysis with sonarqube '
                 withSonarQubeEnv(installationName : 'sonarServer' , credentialsId:'cred4sonar') {  
                    sh 'mvn sonar:sonar'
                    }
            }
        } 
        stage('archive & deploy') {
            steps {
                echo 'archiving aertefact & deploying app '
                
            }
        } 
    }
}
